extends ./layout.jade

block content
    div.col-xs-12.col-md-4.col-md-offset-4
        h2 Upload Image
        hr
        form(action='/upload' method='post' enctype='multipart/form-data')
            div.form-group
                label Input Image
                div.clear-fix
                div.mar-btm-md
                    span(id='ImageUploadLabel') No file selected 
                    span.file-input.btn.btn-primary.btn-file Browse
                        input(type='file')
            div.form-group
                input.form-control(name='imageUrl' type='text' placeholder='http://www.example.com/image.jpg')
                hr
            div.form-group
                label Pattern Guide
                input(name='pattern' class='form-control' type='text')
            div.form-group
                button(class="col-xs-12 btn btn-success" type="submit") Upload
                
block scripts
    script(src='/js/_home.js')