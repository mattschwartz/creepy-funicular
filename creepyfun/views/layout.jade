doctype html
html
  head
    link(rel='stylesheet', href='/styles/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/helpers.css')
    link(rel='stylesheet', href='/styles/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/styles/creepy.css')
    block styles
    
  body
    // Navbar
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            | the
            span.text-bold stuff
            | of
            span.text-bold nightmares
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/top') Highest Rated
            li
              a(href='/recent') Recently Uploaded
            li
              a(href='/gallery') Gallery
          ul.nav.navbar-nav.navbar-right
            if loginSession
                li
                    a(href='/account') #{loginSession.name}
                li
                    a(href='/logout') Logout
            else
                li
                    a(href='/login') Login
                li
                    a(href='/register') Register
          
    // Body
    div.container
        block content

  script(src='/js/jquery-1.11.3.min.js')
  script(src='/js/bootstrap.min.js')
  block scripts

